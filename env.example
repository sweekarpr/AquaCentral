# ============================================
# AquaCentral Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# Database Configuration
POSTGRES_DB=aquacentral
POSTGRES_USER=your_db_username
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=dev
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/aquacentral
SPRING_DATASOURCE_USERNAME=your_db_username
SPRING_DATASOURCE_PASSWORD=your_secure_password_here

# Application Ports
BACKEND_PORT=8080
FRONTEND_PORT=3000

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080

# Security (if needed in future)
# JWT_SECRET=your_jwt_secret_key_here
# JWT_EXPIRATION=86400000

# Optional: External Service API Keys (if needed)
# EXTERNAL_API_KEY=your_api_key_here

